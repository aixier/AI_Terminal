# 服务器配置
NODE_ENV=development
PORT=6009

# 日志配置
LOG_LEVEL=info

# 阿里云 SenseVoice API 配置
# 获取方式：https://dashscope.console.aliyun.com/apiKey
ALIYUN_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# 阿里云 OSS 配置
# 获取方式：https://ram.console.aliyun.com/manage/ak
OSS_ACCESS_KEY_ID=LTAI5tXXXXXXXXXXXXXXXXXX
OSS_ACCESS_KEY_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OSS_BUCKET=your-bucket-name
OSS_REGION=oss-cn-hangzhou

# 数据库配置（可选）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_terminal
DB_USER=root
DB_PASSWORD=

# Redis 配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS 配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# API 限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 文件上传配置
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./data/uploads

# 任务管理配置
TASK_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds
TASK_RETENTION_DAYS=7