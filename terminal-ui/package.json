{
  "name": "terminal-ui",
  "private": true,
  "version": "3.10.2",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "build:prod": "vite build --mode production",
    "serve": "node server.js",
    "serve:prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop terminal-ui",
    "pm2:restart": "pm2 restart terminal-ui",
    "pm2:delete": "pm2 delete terminal-ui",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "docker:build": "docker build -t terminal-ui .",
    "docker:run": "docker run -p 80:80 --env-file .env terminal-ui"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/marked": "^5.0.2",
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "dompurify": "^3.2.6",
    "element-plus": "^2.10.5",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "highlight.js": "^11.11.1",
    "http-proxy-middleware": "^2.0.6",
    "marked": "^16.1.2",
    "pinia": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "vue3-json-viewer": "^2.4.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
