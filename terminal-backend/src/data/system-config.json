{
  "system": {
    "name": "终端能力友好化系统",
    "version": "1.0.0",
    "description": "通过友好的Web界面执行复杂的终端命令"
  },
  "features": {
    "chat": {
      "enabled": true,
      "aiEnabled": true,
      "maxHistorySize": 100
    },
    "terminal": {
      "defaultShell": "auto",
      "defaultCols": 80,
      "defaultRows": 24,
      "scrollback": 1000,
      "fontSize": 14,
      "fontFamily": "Consolas, 'Courier New', monospace"
    },
    "security": {
      "commandWhitelist": true,
      "parameterValidation": true,
      "dangerousCommandConfirm": true,
      "maxFileSize": 10485760,
      "allowedFileTypes": [".txt", ".log", ".json", ".js", ".ts", ".py", ".sh", ".md"]
    },
    "ui": {
      "theme": "light",
      "language": "zh-CN",
      "animations": true
    }
  },
  "limits": {
    "maxConcurrentSessions": 10,
    "maxCommandHistory": 1000,
    "maxOutputBufferSize": 1048576,
    "sessionTimeout": 600000,
    "commandTimeout": 30000
  },
  "api": {
    "rateLimit": {
      "windowMs": 60000,
      "max": 100
    }
  }
}